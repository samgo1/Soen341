<!--Question partial.
Partial contains Question title, Question text and information about who asked the question (when and last updated)-->
<% obj.each do |question| %>
	<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="well well-lg">
				<div class="question-title">
					<%= link_to question.title, question_path(question) %>
				</div>
				<div class="question-body">
					<%= truncate(question.text, length: 30) %>
					<div class="question-meta-details">
						<small>Created by: <%= question.user.username if question.user%>,
							<%= time_ago_in_words(question.created_at) %> ago,
							last updated: <%= time_ago_in_words(question.updated_at) %> ago</small>
						</div>
					</div>
					<div class="article-actions">
						<%= link_to "Edit this question", edit_question_path(question), class: "btn btn-xs btn-primary" %>
						<%= link_to "Delete this question", question_path(question), method: :delete,
						data: { confirm: "Are you sure you want to delete the question?"},
						class: "btn btn-xs btn-danger" %>
						</div>
					</div>
				</div>
			</div>
<% end %>


