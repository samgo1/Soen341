<%= simple_form_for User.new do |f| %>
  <%= f.error_notification %>

  <div class="container">
    <div class="form-inputs">

      <%= f.input :username %>
	  <%= f.input :email    %>
 	  <%= f.input :password %>
	

    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>